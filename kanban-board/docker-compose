version: '3'
services:

  kanban-postgres:
    image: "postgres:14-alpine"
    container_name: db
    volumes:
      - postgres_volume:/var/lib/postgresql/data
    ports:
      - 5432:5432

  kanban-app:
    build: ./kanban-app
    container_name: kanban-app
    environment:
      - DB_SERVER=db
      - POSTGRES_DB=kanban
      - POSTGRES_USER=kanban
      - POSTGRES_PASSWORD=kanban
    ports:
      - 8080:8080
    links:
      - db

  kanban-ui:
    build: ./kanban-ui
    container_name: kanban-ui
    ports:
      - 4200:80
    links:
      - kanban-app


volumes:
  kanban-data: